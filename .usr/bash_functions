mdecto()
{
	FLAG=$1
	NBR=$@

	for nbr in $NBR; do
		if [ ${nbr:0:1} != "-" ]; then
			echo -n "${nbr} ="
			decto ${nbr} ${FLAG}
		fi
	done
}

parse_git_branch()
{
	BRANCH=$(git branch 2> /dev/null | grep \* | cut -d ' ' -f 2)
	if [[ $BRANCH != "" ]]; then
		echo -n "\033[96m($BRANCH)\033[0m"
	else
		lsb_release -i | sed "s/.*:[[:space:]]//"
	fi
}

