# Aliases to edit and sourcing file systems of zsh settings
# "Sourcing" {
	alias zsha='vim ~/.zsh_aliases && source ~/.zshrc'
	alias zshf='vim ~/.zsh_function && source ~/.zshrc'
	alias zshrc='vim ~/.zshrc && source ~/.zshrc'
	alias vimrc='vim ~/.vimrc'
# }

# Aliases to clean and organize
# "Clean" {
	alias clean='find . -type f \( -name "*~" -o -name "#*#" -o -name "*.gch" \) -delete -print'
	alias cclean='bash ~/Cleaner_42/Cleaner_42.sh'
# }

# Aliases to Programming in c
# "C Lang Tools" {
	alias daumasugada='valgrind --leak-check=full --show-leak-kinds=all --track-origins=yes'
	alias norma42='norminette -R CheckForbiddenSourceHeader'
	alias gcc42='gcc -Wall -Wextra -Werror'
	alias cc42='cc -Wall -Wextra -Werror'
# }

